<p id="notice"><%= notice %></p>

<h1>Courses</h1>
<%= link_to 'New Course', new_school_course_path, class: 'btn btn-primary' %>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Active</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.name %></td>
        <td><%= course.active %></td>
        <td><%= link_to 'Batches', school_course_batches_path(@school, course) %></td>
        <td><%= link_to 'Show', school_course_path(@school, course) %></td>
        <td><%= link_to 'Edit', edit_school_course_path(@school, course) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= render 'partials/pagination' %>
