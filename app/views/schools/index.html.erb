<p id="notice"><%= notice %></p>

<h1>Schools</h1>
<% if can? :create, School %>
  <%= link_to 'New School', new_school_path, class: 'btn btn-primary' %>
<% end %>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Active</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @schools.each do |school| %>
      <tr>
        <td><%= school.name %></td>
        <td><%= school.active %></td>
        <td><%= link_to 'Courses', school_courses_path(school) %></td>
        <td><%= link_to 'Show', school %></td>
        <td><%= link_to 'Edit', edit_school_path(school) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= render 'partials/pagination' %>
