<h1>Editing Profile</h1>
<%= form_with(model: @profile, url: profile_users_path, method: :post) do |form| %>
  <%= render 'partials/errors', record: @profile %>

  <div class="row">
    <div class="col">
      <%= form.label :name %>
      <%= form.text_field :name, class: "form-control", required: true %>
    </div>
    <div class="col">
      <br>
      <%= form.submit class: 'btn btn-success' %>
    </div>
  </div>
  <br>
<% end %>

<%= link_to 'Back', profile_users_path %>